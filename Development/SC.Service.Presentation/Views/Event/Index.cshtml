@model SC.Service.Presentation.Models.ListingViewModel<SC.Service.Data.Model.Entities.EventEntity>

@{
    ViewBag.Title = "Events";
}

<h2>Events</h2>

<p>
    @Html.ActionLink("Create New", "AddEdit")
</p>
<table class="table">
    <tr>
        <th>
            Id
        </th>
        <th>
            Title
        </th>
        <th>
            Location
        </th>
        <th>
            Start Date
        </th>
        <th>
            End Date
        </th>

        <th></th>
    </tr>

@foreach (var item in Model.Data) {
    <tr>
        <td>
            @item.Id
        </td>
        <td>
            @item.Title
        </td>
        <td>
            @item.Location
        </td>
        <td>
            @item.StartDate
        </td>
        <td>
            @item.EndDate
        </td>

        <td>
            @Html.ActionLink("Edit", "AddEdit", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "button-delete" })
        </td>
    </tr>
}

</table>

@Html.Partial("_Paging", Model.Paging)
